@using GestorPacientes.Core.Application.ViewModels.LaboratoryTestResult

@model List<LaboratoryTestResultViewModel>;

@{
    ViewData["Title"] = "All Patients";
}

<body class="bgImage">
    <div class="col-md-12 col-md-offset-1 justify-content-center align-content-center">

        <div>
            <form method="post">
                <div class="justify-content-center">
                    <div class="col-auto">
                        <table class="table table-striped table-bordered table-list" style="background-color: #ffffff">
                            <thead class="text-center">
                                <tr>
                                    <th>Name</th>
                                    <th>State</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            @foreach (GestorPacientes.Core.Application.ViewModels.LaboratoryTestResult.LaboratoryTestResultViewModel item in Model)
                            {
                                <tbody class="text-center" style="background-color: #fff0f3">
                                    <tr>
                                        <td>@item.LaboratoryTestName</td>
                                        <td>@item.State</td>
                                        <td align="center">
                                            <a asp-controller="MedicalAppointment" asp-action="Index" asp-route-id="@item.Id" class="btn btn-dark"><i class="fa-solid fa-rectangle-xmark"></i></a>
                                            <a asp-controller="LaboratoryTestResult" asp-action="ReportResult" asp-route-id="@item.Id" class="btn btn-dark"><i class="fa-solid fa-square-check"></i></a>
                                        </td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>